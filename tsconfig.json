{
    "compilerOptions": {
        "module": "CommonJS", 
        "target": "ES2022",
        "lib": ["ES2022"], 
        "moduleResolution": "node", 
        "sourceMap": true, 
        "rootDir": "src", 
        "outDir": "dist", 
        "esModuleInterop": true, 
        "allowSyntheticDefaultImports": true, 
        "strict": true, 
        "skipLibCheck": true,
		"strictNullChecks": false 
    },
    "include": ["src/**/*.ts"]
}